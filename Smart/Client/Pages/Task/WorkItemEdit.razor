                <RadzenDropDown Data="@projects" TextProperty="Name" ValueProperty="ProjectId" AllowClear=true
                                Placeholder="Choose Project" Style="display: block; width: 100%" @bind-Value="@workItem.ProjectId" Name="ProjectId" />
